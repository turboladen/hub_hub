.nav-collapse.collapse
  %a{ href: home_path }
    = image_tag('mindhub_logo.png', class: 'pull-left',
      style: 'width: 20px; padding-top: 7px; padding-right: 5px; ')
    %p.pull-right.brand MindHub

  .btn-group.pull-right
    %ul.nav
      - if user_signed_in?
        %a.btn.dropdown-toggle{ href: '#', 'data-toggle' => 'dropdown' }
          %i.icon-user
          = current_user.email
          %span.caret

        %ul.dropdown-menu
          %li
            = link_to(destroy_user_session_path, :method=>'delete') do
              %i.icon-off
              Logout
          %li
            = link_to(edit_user_registration_path) do
              %i.icon-cog
              Edit account

      - else
        %a.btn.btn-primary.dropdown-toggle{ href: '#', 'data-toggle' => 'dropdown' }
          %i.icon-user
          Login
          %span.caret
        %ul.dropdown-menu
          %li
            = link_to(new_user_session_path) do
              %i.icon-user
              Login

          %li
            = link_to(new_user_registration_path) do
              %i.icon-edit
              Sign up
