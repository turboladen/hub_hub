%a{ href: root_path }
  =image_tag('mindhub_logo.png', class: 'pull-left',
     style: 'width: 25px; padding-top: 7px; padding-right: 5px; ')
  %p.pull-right.brand MindHub
%ul.nav.pull-right
  - if user_signed_in?
    .btn-group.pull-right
      %a.btn.dropdown-toggle{ href: '#', 'data-toggle' => 'dropdown' }
        %i.icon-user
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to(destroy_user_session_path, :method=>'delete') do
            %i.icon-off
            Logout
        %li
          = link_to(edit_user_registration_path) do
            %i.icon-cog
            Edit account
  - else
    %li
      = link_to(new_user_session_path, class: 'btn btn-primary') do
        %i.icon-user.icon-white
        Login
    %li
      = link_to(new_user_registration_path, class: 'btn btn-inverse') do
        %i.icon-edit.icon-white
        Sign up
