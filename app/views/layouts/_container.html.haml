.container
  .content
    .row
      .span12#flash-area
        = render 'layouts/messages'

        = render partial: 'layouts/inappropriate_modal'

    = content_for?(:page_heading) ? yield(:page_heading) : nil

    .row
      - if content_for?(:right_sidebar)
        .span8
          = yield
        .span4
          = yield(:right_sidebar)

      - else
        .span12
          = yield

