// Adjust button color
<% if current_user.voted_down_on? @item %>
    $('button#<%= "#{@item_type}-up-#{@item.id}" %>').removeClass('btn-success');
    $('button#<%= "#{@item_type}-down-#{@item.id}" %>').addClass('btn-danger');
<% else %>
    $('button#<%= "#{@item_type}-down-#{@item.id}" %>').removeClass('btn-danger');
<% end %>

// Adjust net vote count
$('p.votable-item-count#<%= "#{@item_type}-count-#{@item.id}" %>').
        html("<%=j @total_vote_count %>");

// Adjust downvote count
$('span#<%= "#{@item_type}-downvote-count-#{@item.id}" %>').
        html('<i class="icon-minus icon-white"></i> <%= @downvote_count.strip %> ');

// Adjust downvote count
$('span#<%= "#{@item_type}-upvote-count-#{@item.id}" %>').
        html('<i class="icon-plus icon-white"></i> <%= @upvote_count.strip %> ');

