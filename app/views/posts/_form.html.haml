= form_for(post, url: spoke_post_path, html: { class: 'form-horizontal' }) do |f|
  - if post.errors.any?
    #error_explanation
      %h2
        = pluralize(post.errors.count, 'error')
        prohibited this post from being saved:

      %ul
        - post.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    .control-group
      = f.label :title, class: 'control-label'
      .controls
        = f.text_field :title

    .control-group
      = f.label :content, class: 'control-label'
      .controls
        = f.text_area :content, class: 'span5'

  .form-actions
    = f.submit 'Update', class: 'btn btn-primary'
    = link_to 'Cancel', spoke_post_path(post), class: 'btn btn-danger'

