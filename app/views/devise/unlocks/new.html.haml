%h2 Resend unlock instructions
= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, role: 'form' }) do |f|
  = devise_error_messages!

  .form-group
    = f.label :email
    = f.email_field :email, autofocus: true, class: 'form-control'

  %div= f.button 'Resend unlock instructions', class: 'btn btn-default'

%hr/

= render 'devise/shared/links'
