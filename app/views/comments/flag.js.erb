<% if current_user.flagged?(@comment, :inappropriate) %>
$('#inappropriate-comment-<%= @comment.id %>').addClass('btn-danger');
$('#inappropriate-comment-<%= @comment.id %>').removeClass('btn-warning');
$('#inappropriateFlag').modal('show');
<% elsif @comment.flagged?(:inappropriate) %>
$('#inappropriate-comment-<%= @comment.id %>').removeClass('btn-danger');
$('#inappropriate-comment-<%= @comment.id %>').addClass('btn-warning');
<% else %>
$('#inappropriate-comment-<%= @comment.id %>').removeClass('btn-danger');
$('#inappropriate-comment-<%= @comment.id %>').removeClass('btn-warning');
<% end %>
