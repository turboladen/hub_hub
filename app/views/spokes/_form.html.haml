= form_for @spoke do |f|
  - if @spoke.errors.any?
    #error_explanation
      %h2= "#{pluralize(@spoke.errors.count, "error")} prohibited this spoke from being saved:"
      %ul
        - @spoke.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
