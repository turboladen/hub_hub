= form_for(spoke, html: { class: 'form-horizontal' }) do |f|
  - if spoke.errors.any?
    #error_explanation
      %h2
        = pluralize(spoke.errors.count, 'error')
        prohibited this spoke from being saved:
      %ul
        - spoke.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name

  .form-actions
    = f.submit class: 'btn btn-primary'
    = link_to :back do
      %button.btn.btn-danger
        Cancel
