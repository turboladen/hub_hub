<div class="page-header">
    <h1>Spoke: {{name}}</h1>

    <h2>Description</h2>
    <p>{{description}}</p>
</div>

<div class="row">
    <div class="col-md-4 sidebar-offcanvas" role="navigation">
        <div class="list-group">
            <h2>Posts</h2>
            {{#each posts}}
                {{#link-to 'post' this classNames="list-group-item"}}{{title}}{{/link-to}}
            {{/each}}
        </div>
    </div>

    <div id="post-outlet" class="col-md-8">
        {{outlet}}
    </div>
</div>
