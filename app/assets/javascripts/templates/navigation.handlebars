<div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
    <div class="container">
        <div class="navbar-header">
            {{#link-to 'home' classNames="navbar-brand"}}
                <img src="assets/mindhub_logo.png" width="24px">
                MindHub
            {{/link-to}}
        </div>

        <div class="navbar-collapse collapse" data-toggle>
            <div class="btn-group navbar-right">
                {{#if auth.signedIn}}
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="#" {{action signOut}}>
                                <i class="fa fa-sign-out fa-lg fa-inverse"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-edit fa-lg fa-inverse"></i>
                            </a>
                        </li>
                        {{#if auth.user.isAdmin}}
                            <i class="fa fa-users fa-lg fa-inverse"></i>
                        {{/if}}
                        <li>
                            <a href="#">
                                <label class="label label-default">{{auth.user.email}}</label>
                            </a>
                        </li>
                    </ul>
                {{else}}
                    {{#link-to 'sign-in' classNames="btn btn-primary"}}Sign in{{/link-to}}
                    {{view HubHub.MenuItemView href="#/registration" label="Register" classNames="btn btn-default"}}
                {{/if}}
            </div>
        </div>
    </div>
</div>
