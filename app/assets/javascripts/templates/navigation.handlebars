<div id="navigation">
    <div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                {{#link-to 'home' classNames="navbar-brand"}}
                    <img src="assets/mindhub_logo.png" width="24px">
                    MindHub
                {{/link-to}}
            </div>

            <li><a href="#" {{action signOut}}>Logout</a></li>

            <div class="navbar-collapse collapse">
                <div class="btn-group navbar-right">
                    {{#if auth.signedIn}}
                        <button type="button" class="btn btn-default dropdown-toggle">
                            UserName
                            <span class="caret"></span>
                        </button>

                        <ul class="dropdown-menu">
                            <li><a href="#" {{action signOut}}>Logout</a></li>
                            <li>Edit account</li>
                            <li class="divider"></li>
                            <li>Site Administration</li>
                        </ul>
                    {{else}}
                        {{#link-to 'sign-in' classNames="btn btn-primary"}}Sign in{{/link-to}}
                        {{view HubHub.MenuItemView href="#/registration" label="Register" classNames="btn btn-default"}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
