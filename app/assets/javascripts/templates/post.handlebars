<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                {{partial "item_counts"}}
                <h2 class="post-title">{{title}}</h2>

            </div>

            <div class="panel-body">
                <p>{{body}}</p>
            </div>

            <div class="panel-footer">
                <p>Posted on {{createdAtAgo}} by {{owner.email}}</p>
            </div>
        </div>
        <hr/>
        <p>Total responses: {{totalNestedResponses}}</p>
        <h3>Responses</h3>

        {{#each response in responses}}
            {{render "response" response}}
        {{/each}}
    </div>
</div>


