{{#each}}
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{partial "item_counts"}}

                    <h3>
                        {{#link-to 'post' this classNames="post-title"}}{{title}}{{/link-to}}
                    </h3>
                </div>

                <div class="panel-body">
                    <p>{{body}}</p>
                </div>

                <div class="panel-footer">

                    <small>
                        {{owner.email}} posted in {{spoke.name}}
                    </small>

                    <div class="pull-right">
                        read &raquo;
                    </div>
                </div>
            </div>
        </div>
    </div>
{{else}}
    No posts to display.
{{/each}}
